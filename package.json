{
  "name": "file-jump",
  "displayName": "file-jump",
  "description": "这是一款根据文件路径跳转到对应的文件的vscode插件",
  "version": "0.0.4",
  "publisher": "woniu1112",
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "images/head.jpg",
  "activationEvents": [
    "*"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "file-jump",
      "properties": {
        "fileJump.aliasObj": {
          "type": "object",
          "default": {
            "@": "/src"
          }
        },
        "fileJump.pathStandard": {
          "type": "string",
          "default": "package.json",
          "description": "根路径基准默认为：package.json 文件"
        },
        "fileJump.fileSuffix": {
          "type": "array",
          "default": [
            "js",
            "ts",
            "vue",
            "jsx",
            "css",
            "scss",
            "less"
          ]
        }
      }
    },
    "commands": [
      {
        "command": "file-jump.contact",
        "title": "fj-contact"
      },
      {
        "command": "file-jump.updateAlias",
        "title": "fj-updateAlias"
      },
      {
        "command": "file-jump.lookAlias",
        "title": "fj-lookAlias"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.52.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "eslint": "^7.15.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.1.2",
    "vscode-test": "^1.4.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/woniu1112/file-jump"
  }
}
